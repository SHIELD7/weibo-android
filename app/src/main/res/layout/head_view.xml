<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchWrap"
    android:background="@mipmap/header_background"
    android:padding="8dp">
    <cn.bingoogolapple.photopicker.widget.BGAImageView
        android:id="@+id/user_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:bga_iv_circle="true"/>

    <TextView
        android:id="@+id/user_username"
        style="@style/MatchWrap"
        android:layout_below="@id/user_avatar"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="孟河"/>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:id="@+id/number"
        android:layout_toRightOf="@id/user_avatar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_follow"
                style="@style/MatchWrap"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="关注"/>

            <TextView
                android:id="@+id/user_follow_num"
                style="@style/MatchWrap"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="12"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_fan"
                style="@style/MatchWrap"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="粉丝"/>

            <TextView
                android:id="@+id/user_fan_num"
                style="@style/MatchWrap"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="13"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_weibo"
                style="@style/MatchWrap"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="微博"/>

            <TextView
                android:id="@+id/user_weibo_num"
                style="@style/MatchWrap"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="13"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/number"
        android:layout_marginLeft="130dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/user_relation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:text="正在关注" />
    </LinearLayout>

</RelativeLayout>
